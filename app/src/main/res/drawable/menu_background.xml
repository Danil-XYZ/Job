<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Линия (stroke) сверху -->
    <item>
        <shape android:shape="rectangle">
            <size android:height="1dp" />
            <solid android:color="@color/gray1" /> <!-- Цвет линии -->
        </shape>
    </item>

    <!-- Основной фон элемента -->
    <item android:top="1dp"> <!-- Отступ, чтобы линия была только сверху -->
        <shape android:shape="rectangle">
            <solid android:color="@color/black" /> <!-- Цвет фона -->
        </shape>
    </item>

</layer-list>